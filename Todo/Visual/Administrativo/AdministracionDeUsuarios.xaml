<Page
    x:Class="Todo.Visual.Administrativo.AdministracionDeUsuarios"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Todo.Visual.Administrativo"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
   xmlns:fa="using:FontAwesome.UWP"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid Padding="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Encabezado -->
        <StackPanel Grid.Row="0" Margin="0,0,0,20">
            <TextBlock Text="Administración de Usuarios" 
                       FontSize="28" 
                       FontWeight="Bold" 
                       Foreground="#2E7D32"/>

            <TextBlock Text="Gestione los usuarios del sistema médico" 
                       FontSize="16" 
                       Foreground="Gray" 
                       Margin="0,5,0,0"/>
        </StackPanel>

        <!-- Botones de acción -->
        <StackPanel Grid.Row="1" 
                    Orientation="Horizontal" 
                    Margin="0,0,0,20" 
                    Spacing="10">
            <Button x:Name="AgregarUsuarioBtn" 
                    Click="AgregarUsuario_Click"
                    Style="{StaticResource AccentButtonStyle}">
                <StackPanel Orientation="Horizontal">
                    <fa:FontAwesome Icon="UserPlus" 
                                   Width="16" 
                                   Height="16"/>
                    <TextBlock Text="Agregar Usuario" 
                               Margin="8,0,0,0"/>
                </StackPanel>
            </Button>

            <Button x:Name="CambiarContrasenaBtn" 
                    Click="CambiarContrasena_Click">
                <StackPanel Orientation="Horizontal">
                    <fa:FontAwesome Icon="Key" 
                                   Width="16" 
                                   Height="16"/>
                    <TextBlock Text="Cambiar Contraseña" 
                               Margin="8,0,0,0"/>
                </StackPanel>
            </Button>
        </StackPanel>

        <!-- Lista de usuarios -->
        <Grid Grid.Row="2">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Filtros -->
            <Grid Margin="0,0,0,15">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <ComboBox x:Name="FiltroAreaComboBox" 
                         PlaceholderText="Filtrar por área"
                         Width="200"
                         HorizontalAlignment="Left">
                    <ComboBoxItem Content="Todos"/>
                    <ComboBoxItem Content="Pediatría"/>
                    <ComboBoxItem Content="Medicina Deportiva"/>
                </ComboBox>

                <AutoSuggestBox Grid.Column="1"
                               PlaceholderText="Buscar usuario..."
                               Width="250"
                               QueryIcon="Find"/>
            </Grid>

            <!-- Tabla de usuarios -->
            <ListView Grid.Row="1" 
                      x:Name="UsuariosListView"
                      BorderBrush="#E0E0E0"
                      BorderThickness="1"
                      CornerRadius="8">
                <ListView.ItemContainerStyle>
                    <Style TargetType="ListViewItem">
                        <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                        <Setter Property="MinHeight" Value="70"/>
                    </Style>
                </ListView.ItemContainerStyle>
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <Grid Padding="10">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="2*"/>
                                <ColumnDefinition Width="2*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <!-- Avatar -->
                            <Border Width="40" 
                                    Height="40" 
                                    CornerRadius="20" 
                                    Background="#E8F5E9">
                                <TextBlock Text="{Binding Iniciales}"
                                           HorizontalAlignment="Center"
                                           VerticalAlignment="Center"
                                           FontWeight="SemiBold"
                                           Foreground="#2E7D32"/>
                            </Border>

                            <!-- Información del usuario -->
                            <StackPanel Grid.Column="1" 
                                      Margin="15,0,0,0" 
                                      VerticalAlignment="Center">
                                <TextBlock Text="{Binding NombreCompleto}"
                                           FontWeight="SemiBold"/>
                                <TextBlock Text="{Binding Usuario}"
                                           Foreground="Gray"
                                           FontSize="12"/>
                            </StackPanel>

                            <!-- Área -->
                            <TextBlock Grid.Column="2"
                                       Text="{Binding Area}"
                                       VerticalAlignment="Center"/>

                            <!-- Estado -->
                            <Border Grid.Column="3"
                                    Background="{Binding EstadoColor}"
                                    CornerRadius="12"
                                    Padding="8,4"
                                    HorizontalAlignment="Left"
                                    VerticalAlignment="Center">
                                <TextBlock Text="{Binding Estado}"
                                           Foreground="White"
                                           FontSize="12"/>
                            </Border>

                            <!-- Botones de acción -->
                            <StackPanel Grid.Column="4" 
                                      Orientation="Horizontal" 
                                      Spacing="8">
                                <Button Style="{StaticResource ButtonRevealStyle}"
                                        Click="EditarUsuario_Click">
                                    <fa:FontAwesome Icon="Edit" 
                                                   Foreground="#2196F3"/>
                                </Button>
                                <Button Style="{StaticResource ButtonRevealStyle}"
                                        Click="EliminarUsuario_Click">
                                    <fa:FontAwesome Icon="TrashOutline" 
                                                   Foreground="#F44336"/>
                                </Button>
                            </StackPanel>
                        </Grid>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </Grid>

        <!-- Popup para agregar/editar usuario -->
        <Popup x:Name="UserPopup">
            <Border Background="White" 
                    BorderBrush="#E0E0E0" 
                    BorderThickness="1" 
                    CornerRadius="8" 
                    Padding="20" 
                    Width="400">
                <StackPanel>
                    <TextBlock x:Name="PopupTitle" 
                               Text="Agregar Usuario" 
                               FontSize="20" 
                               FontWeight="Bold" 
                               Margin="0,0,0,20"/>

                    <TextBox x:Name="NombreTextBox" 
                             Header="Nombre completo:" 
                             Margin="0,0,0,10"/>

                    <TextBox x:Name="UsuarioTextBox" 
                             Header="Usuario:" 
                             Margin="0,0,0,10"/>

                    <PasswordBox x:Name="ContrasenaBox" 
                                Header="Contraseña:" 
                                Margin="0,0,0,10"/>

                    <ComboBox x:Name="AreaComboBox" 
                             Header="Área:" 
                             Margin="0,0,0,10">
                        <ComboBoxItem Content="Pediatría"/>
                        <ComboBoxItem Content="Medicina Deportiva"/>
                    </ComboBox>

                    <StackPanel Orientation="Horizontal" 
                               HorizontalAlignment="Right" 
                               Margin="0,20,0,0">
                        <Button Content="Cancelar" 
                                Margin="0,0,10,0" 
                                Click="CancelarPopup_Click"/>
                        <Button Content="Guardar" 
                                Style="{StaticResource AccentButtonStyle}" 
                                Click="GuardarUsuario_Click"/>
                    </StackPanel>
                </StackPanel>
            </Border>
        </Popup>

       <Popup x:Name="PasswordPopup">
    <Border Background="White" 
            BorderBrush="#E0E0E0" 
            BorderThickness="1" 
            CornerRadius="8" 
            Padding="20" 
            Width="600">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Título -->
            <TextBlock Text="Cambiar Contraseña" 
                      FontSize="20" 
                      FontWeight="Bold" 
                      Margin="0,0,0,20"/>

            <!-- Filtros -->
            <StackPanel Grid.Row="1" 
                        Orientation="Horizontal" 
                        Spacing="10" 
                        Margin="0,0,0,15">
                <ComboBox x:Name="FiltroAreaPasswordComboBox" 
                         PlaceholderText="Filtrar por área"
                         Width="200"
                         SelectionChanged="FiltroAreaPassword_Changed">
                    <ComboBoxItem Content="Todas las áreas"/>
                    <ComboBoxItem Content="Pediatría"/>
                    <ComboBoxItem Content="Medicina Deportiva"/>
                </ComboBox>

                <AutoSuggestBox PlaceholderText="Buscar usuario..."
                              Width="250"
                              QueryIcon="Find"
                              TextChanged="BuscarUsuarioPassword_TextChanged"/>
            </StackPanel>

            <!-- Lista de usuarios -->
            <ListView Grid.Row="2" 
                      x:Name="UsuariosPasswordListView"
                      Height="300"
                      BorderBrush="#E0E0E0"
                      BorderThickness="1"
                      CornerRadius="8"
                      SelectionMode="Single"
                      SelectionChanged="UsuarioPassword_Selected">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <Grid Padding="10">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <!-- Avatar -->
                            <Border Width="40" 
                                    Height="40" 
                                    CornerRadius="20" 
                                    Background="#E8F5E9">
                                <TextBlock Text="{Binding Iniciales}"
                                          HorizontalAlignment="Center"
                                          VerticalAlignment="Center"
                                          FontWeight="SemiBold"
                                          Foreground="#2E7D32"/>
                            </Border>

                            <!-- Información del usuario -->
                            <StackPanel Grid.Column="1" 
                                      Margin="15,0,0,0" 
                                      VerticalAlignment="Center">
                                <TextBlock Text="{Binding NombreCompleto}"
                                          FontWeight="SemiBold"/>
                                <TextBlock Text="{Binding Area}"
                                          Foreground="Gray"
                                          FontSize="12"/>
                            </StackPanel>
                        </Grid>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>

            <!-- Campos de contraseña -->
            <StackPanel Grid.Row="3" 
                        Margin="0,15,0,0">
                <TextBlock x:Name="UsuarioSeleccionadoText"
                          Text="Usuario seleccionado: Ninguno"
                          Margin="0,0,0,10"
                          FontWeight="SemiBold"/>

                <PasswordBox x:Name="NuevaContrasenaBox" 
                            Header="Nueva contraseña:" 
                            Margin="0,0,0,10"/>

                <PasswordBox x:Name="ConfirmarContrasenaBox" 
                            Header="Confirmar contraseña:" 
                            Margin="0,0,0,10"/>

                <StackPanel Orientation="Horizontal" 
                           HorizontalAlignment="Right" 
                           Margin="0,20,0,0">
                    <Button Content="Cancelar" 
                            Margin="0,0,10,0" 
                            Click="CancelarCambioContrasena_Click"/>
                    <Button Content="Guardar" 
                            Style="{StaticResource AccentButtonStyle}" 
                            Click="GuardarContrasena_Click"
                           />
                </StackPanel>
            </StackPanel>
        </Grid>
    </Border>
</Popup>
    </Grid>
</Page>