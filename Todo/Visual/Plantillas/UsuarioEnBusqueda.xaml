<Page
    x:Class="Todo.Visual.Plantillas.UsuarioEnBusqueda"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Todo.Visual.Plantillas"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Border BorderBrush="#E5E5E5" 
        BorderThickness="1" 
        CornerRadius="10" 
        Width="300" 
        Margin="10"
        Background="White">
        <Grid Margin="15">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Encabezado con avatar -->
            <StackPanel Grid.Row="0" 
                    Orientation="Horizontal" 
                    Margin="0,0,0,10">
                <Border Width="50" 
                    Height="50" 
                    CornerRadius="25" 
                    Background="#E3F2FD">
                    <TextBlock Text="JD" 
                           FontSize="20" 
                           HorizontalAlignment="Center" 
                           VerticalAlignment="Center"
                           Foreground="#1976D2"/>
                </Border>
                <StackPanel Margin="15,0,0,0">
                    <TextBlock x:Name="NombreCompleto"
                           Text="Juan Diego Pérez" 
                           FontSize="16" 
                           FontWeight="SemiBold"/>
                    <TextBlock x:Name="Especialidad"
                           Text="Medicina Deportiva" 
                           Foreground="Gray"/>
                </StackPanel>
            </StackPanel>

            <!-- Información de contacto -->
            <StackPanel Grid.Row="1" Margin="0,10">
                <TextBlock x:Name="Correo"
                       Text="correo@ejemplo.com" 
                       Foreground="Gray"/>
                <TextBlock x:Name="Telefono"
                       Text="+1 234 567 8900" 
                       Foreground="Gray"/>
            </StackPanel>

            <!-- Botón de ingreso -->
            <Button Grid.Row="2" 
                Content="INGRESAR" 
                Background="#1976D2" 
                Foreground="White"
                Height="40"
                Width="120"
                HorizontalAlignment="Right"
                Click="IngresarButton_Click"
                Margin="0,10,148,0" VerticalAlignment="Top"/>
        </Grid>
    </Border>
</Page>
